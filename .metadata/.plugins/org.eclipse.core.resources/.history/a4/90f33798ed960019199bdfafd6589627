		String sql = "select id , pwd from tblregister where id =?"; 
		
		pstmt = conn.prepareStatement(sql);  
		pstmt.setString(1, id);
		rs = pstmt.executeQuery(); 

		
		if(rs.next()){  
			String rId = rs.getString("id");
			String rPwd = rs.getString("pwd");
			
